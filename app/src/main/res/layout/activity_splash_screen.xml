<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#353131"
    tools:context=".SplashScreen">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:flow_horizontalAlign="end"
        app:layout_constraintHorizontal_bias="0.921"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/first_line"
            android:layout_width="15dp"
            android:layout_height="80dp"
            android:layout_marginStart="100dp"
            android:src="@drawable/white_line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/second_line"
            android:layout_width="15dp"
            android:layout_height="180dp"
            android:layout_marginStart="8dp"
            android:scaleType="center"
            android:src="@drawable/red_line"
            app:layout_constraintLeft_toRightOf="@id/first_line"
            app:layout_constraintRight_toLeftOf="@id/third_line"
            app:layout_constraintStart_toEndOf="@+id/first_line"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/third_line"
            android:layout_width="15dp"
            android:layout_height="110dp"
            android:layout_marginStart="8dp"
            android:scaleType="center"
            android:src="@drawable/white_line"
            app:layout_constraintLeft_toRightOf="@id/second_line"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/fourth_line"
            android:layout_width="15dp"
            android:layout_height="140dp"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/green_line"
            app:layout_constraintRight_toLeftOf="@id/fifth_line"
            app:layout_constraintStart_toEndOf="@+id/third_line"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/fifth_line"
            android:layout_width="14dp"
            android:layout_height="109dp"
            android:layout_marginStart="8dp"
            android:scaleType="center"
            android:src="@drawable/red_line"
            app:layout_constraintLeft_toRightOf="@id/fourth_line"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <ImageView
        android:id="@+id/splashIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/splash"
        android:paddingHorizontal="80dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>